<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/main_title_bar"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="@dimen/height_top_bar"
              android:gravity="center"
              android:background="@color/yellow_btn_normal">

    <ImageView
        android:id="@+id/title_bar_run"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/ic_title_run"
        android:paddingLeft="18dp"
        android:paddingRight="10dp"
        android:background="@drawable/btn_menu_bg_selector"
        android:layout_gravity="center_vertical"/>

    <TextView
        android:id="@+id/title_bar_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="空调手环"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/title_bar_item"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/ic_title_item"
        android:paddingRight="18dp"
        android:paddingLeft="10dp"
        android:background="@drawable/btn_menu_bg_selector"
        android:layout_gravity="center_vertical"/>

</LinearLayout>